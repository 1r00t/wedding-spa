FROM node:17.5-alpine AS builder

WORKDIR /app
COPY . .
RUN npm install
RUN npm run build


FROM node:17.5-alpine AS deploy-node
WORKDIR /app
RUN rm -rf ./*
COPY --from=builder /app/package.json .
COPY --from=builder /app/build .
RUN npm install --production
ENV ORIGIN="http://dasroot.de:3000"
CMD ["node", "index.js"]
